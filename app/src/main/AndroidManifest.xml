<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.br.laisa_macedo.carteiradigital">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarteiraDigital"
        tools:targetApi="31">
        <activity
            android:name=".recarga.RecargaFormActivity"
            android:exported="false" />
        <activity
            android:name=".recarga.RecargaReciboActivity"
            android:exported="false" />
        <activity
            android:name=".usuario.MinhaContaActivity"
            android:exported="false" />
        <activity
            android:name=".deposito.DepositoReciboActivity"
            android:exported="false" />
        <activity
            android:name=".deposito.DepositoFormActivity"
            android:exported="false" />
        <activity
            android:name=".app.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".autenticacao.RecuperarContaActivity" />
        <activity android:name=".autenticacao.LoginActivity" />
        <activity android:name=".autenticacao.CadastroActivity" />
        <activity android:name=".app.MainActivity" />
    </application>

</manifest>